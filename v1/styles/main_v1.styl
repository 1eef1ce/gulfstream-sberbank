  text-align center

.social
  margin 0 -5px
  display inline-block

.social-icon
  width 25px
  margin 0 5px

.footer-phone
  font-size 18px
  color colorWhite
  opacity 0.5
  margin-bottom 16px

.footer-text
  font-family fontLight
  font-size 12px
  color #c8c8c8
  line-height 1.5
  opacity 0.5

button.close
  position absolute
  top 20px
  right 17px
  z-index 10
  background url("../assets/images/icons/close-icon.png") no-repeat center
  background-size contain
  opacity 1
  width 16px
  height 16px

.close:not(:disabled):not(.disabled):hover
.close:not(:disabled):not(.disabled):focus
  opacity 1

.modal-xl
  width 82.67%
  margin 2rem auto

.modal-body
  color colorGrey
  padding 0 0 30px

.modal-content
  border 0
  letter-spacing -0.01em

.item-wrapper
  width auto
  align-items center
  justify-content center
  &.row
    margin 0

.item-img
  max-height 200px
  margin-bottom 10px

.item-title
  font-family fontBold
  font-size 17px
  margin-bottom 16px

.item-description
  font-family fontLight
  font-size 15px
  line-height 1.53

.item-thumbnails
  display flex
  justify-content center
  margin-top 30px

.item-thumbnail
  width 38px
  height 38px
  padding 5px
  margin 4px
  background colorGrey
  border-radius 100%
  display flex
  align-items center
  justify-content center
  cursor pointer
  &.active
    background colorRed

.tab-items
  display flex
  align-items center
  height 460px

.tab-items > .active
  display flex

