@font-face
  font-family ProximaNovaRegular
  src url(../assets/fonts/ProximaNova-Regular.woff2) format('woff2'),
  url(../assets/fonts/ProximaNova-Regular.woff) format('woff')

@font-face
  font-family ProximaNovaBold
  src url(../assets/fonts/ProximaNova-Bold.woff2) format('woff2'),
  url(../assets/fonts/ProximaNova-Bold.woff) format('woff')

@font-face
  font-family ProximaNovaLight
  src url(../assets/fonts/ProximaNova-Light.woff2) format('woff2'),
  url(../assets/fonts/ProximaNova-Light.woff) format('woff')

@font-face {
  font-family PTRoubleSans
  src url("../assets/fonts/RUBSN.woff2") format('woff2'),
  url("../assets/fonts/RUBSN.woff") format('woff')
}

//outline fix
input
textarea
  resize none

button
a
  display inline-block
  &:focus
    box-shadow none

//bootstrap macOs fix
.row
  &:before
  &:after
    display inline-block !important
    content normal

//styles
body
  font-family fontRegular, Arial, sans-serif
  font-size 16px
  color colorBlack
  line-height 1
  background-color colorWhite

a
.btn
  color colorWhite
  &:hover
  &:focus
    color colorWhite
    text-decoration none

img
  display block
  margin auto
  max-width 100%
  max-height 100%

ul
  margin 0
  padding 0

.container
  padding 0 32px

header
.header
  position relative
  background-color colorWhite
  padding 10px 28px

.icon-phone
  position absolute
  top 32px
  right 32px
  background url("../assets/images/icons/icon_phone.png") no-repeat center
  width 48px
  height 48px

.header-logo
  max-width 84px
  margin-right 18px
  &:last-of-type
    margin-right 0

.header-phone
  color colorGrey
  &:hover
  &:focus
    color colorGrey

.link-order
  font-family fontBold
  color colorRed
  text-decoration underline
  &:hover
  &:focus
    color colorRed
    text-decoration underline

.screen-top
  background url("../assets/images/bg_top_375.jpg") no-repeat center
  background-size cover
  height 620px
  padding-bottom 48px

.top-title
  font-family fontBold
  font-size 24px
  color colorWhite
  text-align center
  letter-spacing -0.05em
  margin-bottom 6px

.top-text
  font-size 13px
  color colorWhite
  text-align center
  margin-bottom 32px

.btn
  font-size 23px
  color colorWhite
  line-height 1
  background colorRed
  width 236px
  padding 17px
  border 0
  border-radius 4px
  display block
  margin auto
  &.disabled
    opacity 0.4

.screen-sets
  background colorWhite
  color colorLightGrey

.set
  margin-top 44px

.set-title-wrapper
  display block

.set-title
  height 36px

.divider
  height 1px
  width 100%
  background #d4d4d4
  margin 20px 0

.set-description
  font-size 16px
  line-height 1.42
  margin-bottom 16px

.small
  font-size 10px
  margin-bottom 22px

.set-prices
  display table
  width 100%
  margin-bottom 40px

.prices-group
  display table-row
  font-family fontBold
  font-size 15px
  line-height 1.1
  color colorGrey
  > div
    display table-cell
    width 50%
    padding-left 18px

.price
  font-family fontRegular
  font-size 27px
  padding-top 5px

.sign-rouble
  font-family PTRoubleSans
  font-size 25px

.set-img-wrapper
  position relative

.set-img
  margin-bottom 16px

.screen-work-top
  padding-top 80px
  background colorWhite

.screen-work-bottom
  position relative
  background colorGrey
  color colorWhite

.arrow-up
  position absolute
  top -40px
  margin auto
  width 0
  height 0
  border-left 40px solid transparent
  border-right 40px solid transparent
  border-bottom 40px solid colorGrey
  &.arrow-up-center
    left 0
    right 0
  &.arrow-up-left
    left 9.5%
  &.arrow-up-right
    right 9.5%

.work-steps
  display flex
  justify-content space-between
  flex-direction column
  padding 35px 0

.work-step-wrapper
  display flex
  align-items start
  margin 40px 0
  &:nth-of-type(1)
    .work-step
      background url("../assets/images/icons/step1_active.png") no-repeat center
      background-size contain
  &:nth-of-type(2)
    .work-step
      background url("../assets/images/icons/step2_active.png") no-repeat center
      background-size contain
  &:nth-of-type(3)
    .work-step
      background url("../assets/images/icons/step3_active.png") no-repeat center
      background-size contain
  &:nth-of-type(1)
  &:nth-of-type(3)
    .work-step
      &:after
        content ""
        position absolute
        top 144px
        right 9px
        background url("../assets/images/icons/arrow.png") no-repeat center
        background-size 77px
        width 77px
        height 18px
        transform rotate(90deg)
  &:nth-of-type(3)
    .work-step
      &:after
        top -65px

.work-step
  position relative
  display flex
  flex-shrink 0
  width 94px
  height 94px
  border-radius 100%
  color transparent
  outline none
  &.swiper-pagination-bullet-active
    color transparent
    &:nth-of-type(1)
      background url("../assets/images/icons/step1_active.png") no-repeat center
      background-size contain
      &:after
        background url("../assets/images/icons/arrow_active.png") no-repeat center
        background-size 94px
    &:nth-of-type(2)
      background url("../assets/images/icons/step2_active.png") no-repeat center
      background-size contain
    &:nth-of-type(3)
      background url("../assets/images/icons/step3_active.png") no-repeat center
      background-size contain
      &:after
        background url("../assets/images/icons/arrow_active.png") no-repeat center
        background-size 94px

.work-description
  display flex
  align-items center

.work-text
  font-family fontLight
  font-size 15px
  line-height 1.54
  margin-left 22px

.swiper-button-disabled
  display none

.title
  font-family fontBold
  font-size 42px
  color colorGrey
  letter-spacing -0.05em
  text-align center

.screen-app
  background colorWhite
  padding 0 0 40px
  color colorBlack

.app-text
  font-size 14px
  line-height 1.3
  margin-top 24px
  text-align center

.app-mobile
  margin 20px 0 0

.app-option
  position relative
  font-size 15px
  line-height 1.75
  text-align center
  margin-top 40px
  cursor pointer
  &:last-of-type
    margin-bottom 0
  &:hover
    color colorRed
    .option-title
      color colorRed

.swiper-app
  img
    max-width 240px

.app-nav-prev
.app-nav-next
  position absolute
  top 33%
  z-index 100
  width 25px
  height 25px
  cursor pointer

.app-nav-prev
  background url("../assets/images/icons/arrow_prev_rounded.png") no-repeat center
  left 0

.app-nav-next
  background url("../assets/images/icons/arrow_next_rounded.png") no-repeat center
  right 0

.swiper-app-pagination
  &.swiper-pagination-bullets
    position absolute
    bottom 32%
    left 0
    right 0
    z-index 100
    margin auto
    display flex
    justify-content space-between
    width 150px
    outline none

.app-bullet
  width 7px
  height 7px
  border-radius 100%
  background #d3d5d8
  cursor pointer
  &:focus
    outline none

.app-bullet-active
  box-sizing border-box
  background #505965
  border-radius 100%
  box-shadow 0 0 0 2px #ffffff,
             0 0 0 3px #505965

.option-title
  display inline-block
  font-family fontBold
  color colorDarkGrey

.option-special
  color colorRed
  .option-title
    color colorRed

.option-img
  display none
  &:first-of-type
    display inline-block

.screen-callback
  background colorWhite
  padding 60px 0
  color colorBlack
  .title
    margin-bottom 25px

.callback-text
  font-size 15px
  line-height 1.75
  text-align center
  margin-bottom 30px

.callback-success
  display none
  .title
    margin-top 20px

.form-small
  font-family ProximaNovaLight
  font-size 13px
  margin-top 24px

.form-group
  margin-bottom 14px

.form-control
  height 37px
  padding 10px 14px
  font-size 15px
  color colorBlack
  line-height 1
  background-color transparent
  border 1px solid colorBlack
  border-radius 0
  transition none
  :placeholder
    opacity 0.3
  &:focus
    color colorBlack
    background-color transparent
    border-color colorBlack

.btn-form
  margin-top 34px

footer
.footer
  background-color colorGrey
  padding 35px 0 16px

.footer-top
  padding-bottom 0
  margin-bottom 0
